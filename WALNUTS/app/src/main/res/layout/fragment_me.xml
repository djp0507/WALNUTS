<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey"
    android:weightSum="1"
    style="@style/Width_m_Height_m">


        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_horizontal"
            android:background="@drawable/me_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/padding"
                android:text="修改"
                android:textColor="#ffffff"
                android:textSize="@dimen/normal" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/head_large"
                android:layout_height="@dimen/head_large"
                android:src="@drawable/head" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_boy"/>
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="刘建设a"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/big"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_margin"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_focus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="关注的人\n20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="@dimen/shadow"
                    android:background="#ffffff"></View>

                <TextView
                    android:id="@+id/txt_focused"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="被关注\n20"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <LinearLayout
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_read" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="签名"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text="我是一只小小小小小小鸟"
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_business" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="行业"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_vocation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text="化工"
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_area" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="区域"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text="江苏省南京市"
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_position" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="职位"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_position"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text="区域销售经理"
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_company" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="公司"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text="上海化工原料厂"
                        android:textSize="@dimen/normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="vertical"
                android:padding="@dimen/padding">

                <LinearLayout
                    android:id="@+id/lv_question"
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_question" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的问题"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/lv_answer"
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_answer" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的回答"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/lv_focus"
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_attention" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的关注"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/lv_save"
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_collect" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的收藏"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_set"
                style="@style/view_me"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="horizontal"
                android:paddingRight="@dimen/padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_set" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_weight="0.3"
                    android:text="设置"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:drawableRight="@drawable/icon_npg"
                    android:paddingRight="@dimen/margin" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>