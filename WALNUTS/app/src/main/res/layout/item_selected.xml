<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:text="精选回答"
        android:id="@+id/txt_select"
        android:paddingBottom="@dimen/margin_small"
        android:paddingTop="@dimen/margin_small"
        android:paddingLeft="@dimen/margin"
        android:typeface="sans"
        android:textSize="@dimen/normal"
        android:textColor="@color/login"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:background="@drawable/background_layout_div"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:gravity="center|left"
                android:paddingLeft="@dimen/margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/margin_big"
                    android:layout_height="@dimen/margin_big"
                    android:src="@drawable/head" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.55"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_vertical"
                    android:text="刘建设的建设"
                    android:typeface="sans"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:id="@+id/txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:typeface="sans"
                    android:gravity="center_vertical"
                    android:text="职业的小逗比"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center|right"
                android:paddingRight="@dimen/margin">

                <TextView
                    android:id="@+id/txt_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_div_grey"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding"
                    android:onClick="onClick"
                    android:text="＋关注TA"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/small"
                    android:typeface="sans"></TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:text="个个人个人个人"
            android:typeface="sans"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textScaleX="1"
            android:textSize="@dimen/big" />
        <ImageView
            android:id="@+id/img1"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_height"
            android:src="@drawable/demo"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/txt_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:typeface="sans"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/margin_small"
            android:lineSpacingMultiplier="1.2"
            android:text="开车不喝酒河车不开酒"
            android:textColor="@color/gray"
            android:textScaleX="1"
            android:textSize="@dimen/normal" />
    </LinearLayout>
</LinearLayout>