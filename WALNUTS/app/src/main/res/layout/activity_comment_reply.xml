<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/top"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.15"
            android:background="@color/txt_color"></View>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:background="@color/grey">
            <ListView
                android:id="@+id/list_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:divider="#00000000"
                android:dividerHeight="0dp"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:clickable="true"
        android:onClick="onClick"
        android:visibility="gone"></RelativeLayout>

    <LinearLayout
        android:id="@+id/lv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="0.5"
                android:background="@null"
                android:gravity="left|center"
                android:onClick="onClick"
                android:paddingBottom="@dimen/padding"
                android:text="取消回复"
                android:textColor="@color/login"
                android:textSize="@dimen/normal"
                android:typeface="sans" />

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="0.5"
                android:background="@null"
                android:gravity="right|center"
                android:onClick="onClick"
                android:paddingBottom="@dimen/padding"
                android:text="立即回复"
                android:textColor="@color/login"
                android:textSize="@dimen/normal"
                android:typeface="sans" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_layout_et"
            android:gravity="top"
            android:hint="输入文字"
            android:lines="4"
            android:padding="@dimen/padding"
            android:textColor="@color/gray"
            android:textColorHint="@color/txt_color"
            android:textCursorDrawable="@drawable/color_cusor"
            android:textSize="@dimen/small" />
    </LinearLayout>
</RelativeLayout>