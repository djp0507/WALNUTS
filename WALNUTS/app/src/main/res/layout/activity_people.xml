<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey"
    style="@style/Width_m_Height_m">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/me_bg">

        <View
            style="@style/Width_m_Height_m"
            android:alpha="0.35"
            android:background="#505050"></View>

        <View
            style="@style/Width_m_Height_m"
            android:background="@drawable/bg_jb"></View>

        <LinearLayout
            style="@style/Width_m_Height_m"
            android:paddingTop="@dimen/margin"
            android:gravity="center_horizontal"
           >

            <LinearLayout
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:drawableLeft="@drawable/btn_back_white"
                    android:drawablePadding="@dimen/padding"
                    android:paddingLeft="@dimen/padding_left"
                    android:text="返回"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:id="@+id/txt_add_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:paddingRight="@dimen/padding_left"
                    android:visibility="gone"
                    android:text="关注"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/big" />
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="@dimen/head_large"
                android:layout_height="@dimen/head_large"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/padding"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_sex"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_boy"/>
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/big"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_margin"
                android:gravity="center_vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/txt_focusNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="@dimen/shadow"
                    android:background="#ffffff"></View>

                <TextView
                    android:id="@+id/txt_focusedNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_margin="@dimen/margin"
                android:visibility="gone"
                android:background="@drawable/background_layout_div"
                android:orientation="vertical"
                style="@style/view_me">

                <LinearLayout
                    android:id="@+id/ll_ques"
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_question" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="TA的问题"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/ll_answer"
                    style="@style/view_me">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_answer" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="TA的回答"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="vertical"
               >

                <LinearLayout style="@style/view_me"
                    android:paddingTop="@dimen/margin"
                    android:paddingBottom="@dimen/margin"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_read" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="简介"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textColorHint="@color/txt_color"
                        android:textSize="@dimen/small"
                        android:typeface="sans" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout style="@style/view_me"
                    android:paddingTop="@dimen/margin"
                    android:paddingBottom="@dimen/margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_business" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="行业"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/txt_vocation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textSize="@dimen/small" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout style="@style/view_me"
                    android:paddingTop="@dimen/margin"
                    android:paddingBottom="@dimen/margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_area" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="区域"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/txt_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textSize="@dimen/small" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout style="@style/view_me"
                    android:paddingTop="@dimen/margin"
                    android:paddingBottom="@dimen/margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_position" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="职位"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/txt_position"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textSize="@dimen/small" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.5"
                    android:background="@color/txt_color"></View>

                <LinearLayout style="@style/view_me"
                    android:paddingTop="@dimen/margin"
                    android:paddingBottom="@dimen/margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_company" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="公司"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/small" />

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textSize="@dimen/small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>