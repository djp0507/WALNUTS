<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin"
            android:src="@drawable/btn_back_select" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_big"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/round"
            android:gravity="center"
            android:text="设置密码"
            android:textColor="@color/login"
            android:textSize="@dimen/large_big" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/height"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="center|bottom"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/head_big"
                android:textColorHint="@color/txt_color"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal" />

            <com.njjd.utils.TimeCountDown
                android:id="@+id/btn_resend"
                android:layout_width="0dp"
                android:layout_height="@dimen/height"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_weight="0.2"
                android:background="@null"
                android:gravity="bottom"

                android:text="重发"
                android:textColor="@color/login"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:alpha="0.1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@null"
                android:gravity="center|bottom"
                android:textColorHint="@color/txt_color"
                android:hint="请输入密码(不少于六位)"
                android:inputType="textPassword"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:alpha="0.1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:background="@null"
                android:textColorHint="@color/txt_color"
                android:gravity="center|bottom"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:alpha="0.1"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/txt_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:gravity="center_horizontal"
            android:text="@string/code"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/small"
            android:visibility="gone" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:text="@string/next"
        android:textColor="#ffffff"
        android:textSize="@dimen/big" />
</RelativeLayout>