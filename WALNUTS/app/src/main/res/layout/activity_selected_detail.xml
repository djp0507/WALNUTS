<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_m_Height_m"
    android:background="@color/grey">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <include layout="@layout/top"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_color"
            android:alpha="0.15"></View>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/top"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_quesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:textStyle="bold"
            android:text="工业项目一定要能喝酒吗?"
            android:textColor="@color/gray"
            android:textSize="@dimen/big" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.15"
            android:background="@color/txt_color"></View>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/ll"
        android:id="@+id/lv_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/padding_top"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:text="回答"
                android:typeface="sans"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/normal" />
            <LinearLayout
                android:id="@+id/lv_answer"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_layout_div">
                <include layout="@layout/item_group"></include>
            </LinearLayout>
            <com.njjd.utils.ListViewForScrollView
                android:id="@+id/list_comment"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:listSelector="#00000000"
                android:dividerHeight="0dp"
                android:divider="#00000000"
                android:layout_height="match_parent"></com.njjd.utils.ListViewForScrollView>
            <TextView
                android:id="@+id/txt_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:gravity="center"
                android:paddingBottom="@dimen/padding"
                android:text="查看更多内容\n..."
                android:textColor="@color/txt_color"
                android:textSize="@dimen/normal" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="onClick">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@null"
                android:layout_marginLeft="2dp"
                android:typeface="sans"
                android:gravity="left|center"
                android:paddingBottom="@dimen/padding"
                android:text="取消回复"
                android:onClick="onClick"
                android:textColor="@color/login"
                android:textSize="@dimen/normal" />

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="0dp"
                android:typeface="sans"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:gravity="right|center"
                android:paddingBottom="@dimen/padding"
                android:text="立即回复"
                android:onClick="onClick"
                android:textColor="@color/login"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_layout_et"
            android:hint="输入文字"
            android:lines="4"
            android:gravity="top"
            android:padding="@dimen/padding"
            android:textColor="@color/gray"
            android:textColorHint="@color/txt_color"
            android:textCursorDrawable="@drawable/color_cusor"
            android:textSize="@dimen/small" />
    </LinearLayout>
</RelativeLayout>