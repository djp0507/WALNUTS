<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_layout_div"
    android:padding="@dimen/padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:padding="2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/head_big"
                android:layout_height="@dimen/head_big"
                android:src="@drawable/head" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:text="刘建设的建设"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="职业的小逗比"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_shape"
                android:drawableLeft="@drawable/btn_like"
                android:drawablePadding="@dimen/padding"
                android:text=" 关注TA"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/normal"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:text="工业项目一定要能喝酒吗?"
        android:textColor="#000000"
        android:textSize="@dimen/large"/>
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/demo"/>
    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/line_height"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:maxLines="2"
        android:text="工业项目销目销售售工业项业项目销售工业项目销售工业项目销售工业项目销售"
        android:textColor="@color/gray"
        android:typeface="sans"
        android:textScaleX="1"
        android:textSize="@dimen/normal" />
</LinearLayout>