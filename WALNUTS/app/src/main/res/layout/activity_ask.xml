<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_back"
    android:background="@color/grey"
    style="@style/Width_m_Height_m">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/Width_m_Height_m"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/top"></include>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left"
                android:text="问题"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/small" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:typeface="sans"
                android:layout_height="wrap_content"
                android:background="@drawable/background_layout_et"
                android:gravity="top|left"
                android:hint="请输入问题（不少于5字,不超过50字）"
                android:maxLines="3"
                android:minLines="2"
                android:paddingLeft="@dimen/padding_left"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left"
                android:text="详情"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/small" />

            <EditText
                android:id="@+id/et_content2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:typeface="sans"
                android:layout_weight="0.4"
                android:background="@drawable/background_layout_div"
                android:gravity="top|left"
                android:hint="对您的问题进行详细的补充，如：客户背景、相关产品、销售流程等等，越详细越能让其他用户帮到您"
                android:paddingLeft="@dimen/padding_left"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal" />

            <GridView
                android:id="@+id/gw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/margin_big"
                android:layout_weight="0.4"
                android:columnWidth="66dp"
                android:numColumns="4"
                android:paddingLeft="@dimen/padding_left"
                android:paddingTop="@dimen/padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="@dimen/padding"
                android:paddingRight="@dimen/padding_left"
                android:paddingTop="@dimen/padding">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_button_div"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingLeft="@dimen/padding_left"
                    android:paddingRight="@dimen/padding_left"
                    android:text="下一步"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/normal" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>