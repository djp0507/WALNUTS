<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_layout_div"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding">
        <LinearLayout
            android:id="@+id/lv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/padding"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:text="工业项目销售工业项目销售工项目销售工业工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售"
            android:textColor="#666666"
            android:textSize="@dimen/normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:alpha="0.15"
            android:background="#000000"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_answerNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:paddingLeft="@dimen/margin"
                android:text="回答 26"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/small">

            </TextView>

            <TextView
                android:id="@+id/txt_focusNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingLeft="@dimen/padding"
                android:text="关注 26"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/small">

            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/margin">

                <TextView
                    android:id="@+id/txt_focus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/txt_shape_login"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:text="+关注问题"
                    android:textColor="@color/login"
                    android:textSize="@dimen/small"
                    android:typeface="sans"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_top"
        android:layout_marginRight="@dimen/padding_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="回答"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/padding"
            android:id="@+id/txt_sort"
            android:drawableRight="@drawable/btn_sort"
            android:gravity="right"
            android:text="认同数"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/small" />
    </LinearLayout>

    <com.njjd.utils.CustomExpandableListView
        android:id="@+id/ex_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_margin"
        android:overScrollMode="never"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:focusable="false"
        android:groupIndicator="@null"
        android:listSelector="@color/grey"></com.njjd.utils.CustomExpandableListView>
    <include
        android:id="@+id/empty"
        layout="@layout/empty_view"></include>
</LinearLayout>