<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_m_Height_m"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/top"></include>
    </LinearLayout>

    <LinearLayout
        style="@style/Width_m_Height_m"
        android:layout_below="@id/top"
        android:layout_marginTop="1dp">

        <com.scrollablelayout.ScrollableLayout
            android:id="@+id/scrollLayout"
            style="@style/Width_m_Height_m">

            <LinearLayout
                android:id="@+id/lv_tag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.njjd.utils.ShangshabanChangeTextSpaceView
                    android:id="@+id/txt_quesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    android:text="工业项目一定要能喝酒吗?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/big" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>
            </LinearLayout>

            <ScrollView
                android:id="@+id/lv_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/layout_detail"></include>
            </ScrollView>
        </com.scrollablelayout.ScrollableLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:src="@drawable/btn_ansr" />
    <RelativeLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="onClick">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@null"
                android:layout_marginLeft="2dp"
                android:typeface="sans"
                android:gravity="left|center"
                android:paddingBottom="@dimen/padding"
                android:text="取消回复"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/normal" />

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="0dp"
                android:typeface="sans"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:gravity="right|center"
                android:paddingBottom="@dimen/padding"
                android:text="立即回复"
                android:textColor="@color/actionsheet_blue"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_layout_et"
            android:hint="输入文字"
            android:lines="4"
            android:gravity="top"
            android:padding="@dimen/padding"
            android:textColor="@color/gray"
            android:textColorHint="@color/txt_color"
            android:textCursorDrawable="@drawable/color_cusor"
            android:textSize="@dimen/small" />
    </LinearLayout>

</RelativeLayout>