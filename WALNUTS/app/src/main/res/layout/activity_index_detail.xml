<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_m_Height_m"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <include layout="@layout/top"></include>
    </LinearLayout>

    <LinearLayout
        style="@style/Width_m_Height_m"
        android:layout_below="@id/top"
        android:layout_marginTop="1dp">

        <com.scrollablelayout.ScrollableLayout
            android:id="@+id/scrollLayout"
            style="@style/Width_m_Height_m">
            <HorizontalScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
            <LinearLayout
                android:id="@+id/lv_tag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"></LinearLayout>
</HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.njjd.utils.ShangshabanChangeTextSpaceView
                    android:id="@+id/txt_quesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:lineSpacingMultiplier="1.2"
                    android:paddingTop="@dimen/padding"
                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    android:textStyle="bold"
                    android:text="工业项目一定要能喝酒吗?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/big" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>
            </LinearLayout>

            <ScrollView
                android:id="@+id/lv_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/layout_detail"></include>
            </ScrollView>
        </com.scrollablelayout.ScrollableLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:src="@drawable/btn_ansr" />
    <RelativeLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="onClick">
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@null"
                android:layout_marginLeft="2dp"
                android:typeface="sans"
                android:gravity="left|center"
                android:paddingBottom="@dimen/padding"
                android:onClick="onClick"
                android:text="取消回复"
                android:textColor="@color/login"
                android:textSize="@dimen/normal" />

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="0dp"
                android:typeface="sans"
                android:layout_marginRight="2dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="onClick"
                android:background="@null"
                android:gravity="right|center"
                android:paddingBottom="@dimen/padding"
                android:text="立即回复"
                android:textColor="@color/login"
                android:textSize="@dimen/normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/background_layout_et"
            android:hint="输入文字"
            android:lines="4"
            android:gravity="top"
            android:padding="@dimen/padding"
            android:textColor="@color/gray"
            android:textColorHint="@color/txt_color"
            android:textCursorDrawable="@drawable/color_cusor"
            android:textSize="@dimen/small" />
    </LinearLayout>
    <!--底部大布局-->
    <LinearLayout
        android:id="@+id/lv_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="1">
        <!--取消按钮布局-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:paddingTop="@dimen/padding"
            android:text="分享到"
            android:textColor="@color/gray"
            android:textSize="@dimen/small"/>
        <!--分享内容布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <!--第一排-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/share_wechat"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.25"
                    >

                    <ImageView
                        android:layout_marginTop="@dimen/padding"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/umeng_socialize_wechat"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:typeface="sans"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="微信"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/share_wechat_circle1"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.25"
                    >

                    <ImageView
                        android:layout_marginTop="@dimen/padding"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/umeng_socialize_wxcircle"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:typeface="sans"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="朋友圈"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/share_qq"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.25"
                    >

                    <ImageView
                        android:layout_marginTop="@dimen/padding"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/umeng_socialize_qq"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:typeface="sans"
                        android:text="好友/群"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/share_qzone"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.25"
                    >

                    <ImageView
                        android:layout_marginTop="@dimen/padding"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/umeng_socialize_qzone"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:typeface="sans"
                        android:text="QQ空间"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/share_sina"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.25"
                    >
                    <ImageView
                        android:layout_marginTop="@dimen/padding"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/umeng_socialize_sina"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:typeface="sans"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="微博"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/share_aili"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="0.25"
                    >
                    <ImageView
                        android:layout_marginTop="@dimen/padding"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/umeng_socialize_alipay"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin"
                        android:typeface="sans"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="支付宝"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--取消按钮布局-->
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:background="@color/white"
            android:text="取消分享"
            android:textSize="@dimen/normal"
            android:textColor="@color/login" />
    </LinearLayout>

</RelativeLayout>