<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_m_Height_m"
    android:background="@color/grey">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/top"></include>
    </LinearLayout>

    <LinearLayout
        style="@style/Width_m_Height_m"
        android:layout_below="@id/top"
        android:layout_marginTop="1dp">

        <com.scrollablelayout.ScrollableLayout
            android:id="@+id/scrollLayout"
            style="@style/Width_m_Height_m">

            <LinearLayout
                android:id="@+id/lv_tag"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/padding_left"
                android:layout_marginRight="@dimen/padding_left"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_quesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    android:background="@color/white"
                    android:lineSpacingMultiplier="1.2"
                    android:text="工业项目一定要能喝酒吗?"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/big" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>
            </LinearLayout>
            <ScrollView
                android:id="@+id/lv_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/layout_detail"></include>
            </ScrollView>
        </com.scrollablelayout.ScrollableLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:src="@drawable/btn_ansr" />
    <LinearLayout
        android:id="@+id/lv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:padding="@dimen/padding"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_cancle"
            android:layout_width="wrap_content"
            android:padding="@dimen/margin"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:src="@drawable/btn_close"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:background="@drawable/background_layout_et"
                android:hint="输入文字"
                android:imeOptions="actionSend"
                android:paddingLeft="@dimen/padding"
                android:textColor="@color/gray"
                android:textColorHint="@color/txt_color"
                android:textSize="@dimen/small" />
            <Button
                android:id="@+id/btn_reply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="回复"
                android:layout_margin="2dp"
                android:background="@drawable/background_button_div"
                android:textColor="@color/white"
                android:textSize="@dimen/normal"
                android:typeface="sans"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>