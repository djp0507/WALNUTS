<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/top"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务谈判"
                android:typeface="normal"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/padding"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:textSize="@dimen/small"
                android:textColor="@color/white"
                android:background="@drawable/tag_textview"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/padding"
                android:gravity="center"
                android:typeface="normal"
                android:textSize="@dimen/small"
                android:textColor="@color/white"
                android:background="@drawable/tag_textview"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务谈判"
                android:layout_marginTop="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:padding="@dimen/padding"
                android:typeface="normal"
                android:gravity="center"
                android:textSize="@dimen/small"
                android:textColor="@color/white"
                android:background="@drawable/tag_textview"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:alpha="0.15"
            android:background="@color/grey"></View>

        <com.njjd.utils.MyScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:background="@drawable/background_layout_div"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/padding">

                    <LinearLayout
                        android:id="@+id/lv_top"
                        android:layout_width="match_parent"
                        android:paddingLeft="@dimen/padding_left"
                        android:paddingRight="@dimen/padding_left"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_quesTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="工业项目一定要能喝酒吗?"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/big" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lv_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginTop="@dimen/margin"
                        android:alpha="0.15"
                        android:background="#000000"></View>

                    <TextView
                        android:id="@+id/txt_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/padding"
                        android:paddingLeft="@dimen/margin"
                        android:paddingRight="@dimen/margin"
                        android:text="工业项目销售工业项目销售工项目销售工业工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售工业项目销售"
                        android:textColor="#666666"
                        android:textSize="@dimen/normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_right"
                        android:layout_marginTop="@dimen/margin"
                        android:alpha="0.15"
                        android:background="#000000"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/txt_answerNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:paddingLeft="@dimen/margin"
                            android:text="回答 26"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/small">

                        </TextView>

                        <TextView
                            android:id="@+id/txt_focusNum"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:paddingLeft="@dimen/padding"
                            android:text="关注 26"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/small">

                        </TextView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/margin">

                            <TextView
                                android:id="@+id/txt_focus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/txt_shape"
                                android:gravity="center_vertical"
                                android:text="+关注问题"
                                android:paddingTop="@dimen/padding"
                                android:paddingBottom="@dimen/padding"
                                android:typeface="sans"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/small"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_top"
                    android:layout_marginRight="@dimen/padding_top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="回答"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding"
                        android:drawableRight="@drawable/btn_cd"
                        android:gravity="right"
                        android:text="认同数"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <com.njjd.utils.CustomExpandableListView
                    android:layout_marginTop="@dimen/_margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:id="@+id/ex_list"
                    android:focusable="false"
                    android:dividerHeight="0dp"
                    android:divider="#00000000"
                    android:listSelector="@color/grey"
                    android:layout_width="match_parent"
                    android:groupIndicator="@null"
                    android:layout_height="match_parent"></com.njjd.utils.CustomExpandableListView>

                <LinearLayout
                    android:id="@+id/lv_topTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_layout_div"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_top_quesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_left"
                        android:paddingRight="@dimen/padding_left"
                        android:text="工业项目一定要能喝酒吗?"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/big" />
                </LinearLayout>
            </LinearLayout>
        </com.njjd.utils.MyScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:src="@drawable/btn_ansr" />
</RelativeLayout>