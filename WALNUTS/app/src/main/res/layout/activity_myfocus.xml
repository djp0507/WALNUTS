<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_m_Height_m"
    android:background="@color/grey">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/top"></include>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.15"
        android:background="@color/grey"></View>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:checkedButton="@+id/radio_one"
        android:orientation="horizontal"
        android:weightSum="1">

        <RadioButton
            android:id="@+id/radio_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:button="@null"
            android:drawableBottom="@drawable/selector_btn_line"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingRight="@dimen/padding_top"
            android:text="用户"
            android:textColor="@drawable/selector_btn_top"
            android:textSize="@dimen/normal" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:alpha="0.15"
            android:background="#000000"></View>

        <RadioButton
            android:id="@+id/radio_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:button="@null"
            android:drawableBottom="@drawable/selector_btn_line"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingRight="@dimen/padding_top"
            android:text="问题"
            android:textColor="@drawable/selector_btn_top"
            android:textSize="@dimen/normal" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:alpha="0.15"
            android:background="#000000"></View>

        <RadioButton
            android:id="@+id/radio_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.33"
            android:button="@null"
            android:drawableBottom="@drawable/selector_btn_line"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingRight="@dimen/padding_top"
            android:text="标签"
            android:textColor="@drawable/selector_btn_top"
            android:textSize="@dimen/normal" />
    </RadioGroup>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/padding"
        android:background="@drawable/background_layout_div"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/list_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"></com.baoyz.swipemenulistview.SwipeMenuListView>

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/list_ques"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:visibility="gone"></com.baoyz.swipemenulistview.SwipeMenuListView>

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/list_tag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="#00000000"
                android:visibility="gone"></com.baoyz.swipemenulistview.SwipeMenuListView>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>