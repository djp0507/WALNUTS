<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_big">

        <TextView
            android:layout_marginTop="@dimen/margin_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选取您感兴趣的话题："
            android:gravity="left"
            android:textColor="@color/login"
            android:textSize="@dimen/large_big"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(可多选)"
            android:gravity="left"
            android:textColor="@color/txt_color"
            android:textSize="@dimen/normal"/>
        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:weightSum="1">
                <RadioButton
                    android:id="@+id/btn_one"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:button="@null"
                    android:tag="0"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_xzkh"
                    android:background="@null"
                    android:text="寻找客户"
                    android:drawablePadding="@dimen/padding"
                    android:textColor="@drawable/selector_btn_xzkh"
                    android:textSize="@dimen/big"/>
                <RadioButton
                    android:id="@+id/btn_two"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="0"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_cwsk"
                    android:background="@null"
                    android:drawablePadding="@dimen/padding"
                    android:text="财务收款"
                    android:textColor="@drawable/selector_btn_cwsk"
                    android:textSize="@dimen/big"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:weightSum="1">
                <RadioButton
                    android:id="@+id/btn_three"
                    android:layout_width="0dp"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="0"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_gttp"
                    android:background="@null"
                    android:text="沟通谈判"
                    android:drawablePadding="@dimen/padding"
                    android:textColor="@drawable/selector_btn_gttp"
                    android:textSize="@dimen/big"/>
                <RadioButton
                    android:id="@+id/btn_four"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_bjtb"
                    android:background="@null"
                    android:text="报价投标"
                    android:button="@null"
                    android:tag="0"
                    android:gravity="center"
                    android:drawablePadding="@dimen/padding"
                    android:textColor="@drawable/selector_btn_bjtb"
                    android:textSize="@dimen/big"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin"
                android:layout_marginBottom="@dimen/margin"
                android:weightSum="1">
                <RadioButton
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/btn_five"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:tag="0"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_khgl"
                    android:background="@null"
                    android:text="客户管理"
                    android:drawablePadding="@dimen/padding"
                    android:textColor="@drawable/selector_btn_khgl"
                    android:textSize="@dimen/big"/>
                <RadioButton
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/btn_six"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_fljf"
                    android:background="@null"
                    android:tag="0"
                    android:text="法律纠纷"
                    android:drawablePadding="@dimen/padding"
                    android:textColor="@drawable/selector_btn_fljf"
                    android:textSize="@dimen/big"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin"
                android:weightSum="1">
                <RadioButton
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/btn_seven"
                    android:tag="0"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_zcjh"
                    android:background="@null"
                    android:text="职场江湖"
                    android:drawablePadding="@dimen/padding"
                    android:layout_marginBottom="@dimen/margin"
                    android:textColor="@drawable/selector_btn_zcjh"
                    android:textSize="@dimen/big"/>
                <RadioButton
                    android:button="@null"
                    android:gravity="center"
                    android:id="@+id/btn_eight"
                    android:layout_width="0dp"
                    android:tag="0"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/selector_btn_shzt"
                    android:background="@null"
                    android:text="生活杂谈"
                    android:drawablePadding="@dimen/padding"
                    android:textColor="@drawable/selector_btn_shzt"
                    android:textSize="@dimen/big"/>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_skip"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="@color/login"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:textColor="#ffffff"
        android:textSize="@dimen/big" />
</RelativeLayout>